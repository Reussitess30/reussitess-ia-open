  const speak = function(text, emotion = 'neutral') {
    if (typeof window !== 'undefined' && 'speechSynthesis' in window) {
      window.speechSynthesis.cancel();
      
      const linkRegex = new RegExp('\\[([^\\]]+)\\]\\(([^)]+)\\)', 'g');\n        const cleanText = text
        .replace(/\*\*/g, '')
        .replace(linkRegex, '$1')
        .replace(/#{1,6}\s/g, '')
        .replace(new RegExp('üá¨üáµ|üå¥|üöÄ|üí¨|‚úÖ|‚Ä¢', 'g'), '')
